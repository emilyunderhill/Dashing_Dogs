<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div>
    <%= link_to root_url, class: "navbar-brand" do %>
        <%= image_tag "dashing_dogs.png"%>
    <% end %>
  </div>

  <div class="d-inline-flex">
    <div class="btn-toolbar">
      <%= form_tag outfits_path, class: "navbar-search input-group", method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find an outfit...",
        aria: {label: "Input group example",
        describedby: "btnGroupAddon"}
      %>
      <%= button_tag(type:"submit", class: "input-group-text") do%>
        <i class="fas fa-search"></i>
        <%end%>
    <% end %>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav search">
      <% if user_signed_in? %>
        <li> Hi, <%= current_user.first_name%>! </li>
        <li class="nav-item dropdown">
          <%= image_tag "dog.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Outfits", outfits_path, class: "dropdown-item" %>
            <%= link_to "Add new outfit", new_outfit_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Sell an item', new_outfit_path(@outfit), class: "navbar-button"%>
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
  </div>
</div>
