<% @your_bookings.each do |booking| %>
  <div>
    <% if booking.approve %>
      <ul>
        <li class="flash-booking flash-success mt-3 px-3">
          <p><strong>Start:</strong> <%= booking.date_from.strftime("%B #{booking.date_from.day.ordinalize}, %Y") %></p>
          <p><strong>End:</strong> <%= booking.date_to.strftime("%B #{booking.date_to.day.ordinalize}, %Y") %></p>
          <%= link_to booking_path(booking), method: :delete, remote: :true, data: { confirm: "Are you sure?" } do %>
            <i class="far fa-window-close"></i>
          <% end %>
        </li>
      </ul>
    <% end %>
  </div>
<% end %>
