<div class="container">
  <%= simple_form_for @outfit do |f| %>
    <%= f.input :name, placeholder: @outfit.name %>
    <%= f.input :size, placeholder: @outfit.size, collection: ['extra small', 'small', 'medium', 'large', 'extra large']  %>
    <%= f.input :price, placeholder: @outfit.price %>
    <%= f.input :max_loan_period, placeholder: @outfit.max_loan_period %>
    <%= f.input :description, placeholder: :description %>
    <%= f.input :photos, as: :file, label: 'Add photo' %>
    <%= f.submit %>
  <% end %>
</div>
