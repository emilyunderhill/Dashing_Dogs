<div class="container">
  <div class="d-flex">
    <%= link_to new_outfit_path do %>
      <div class="btn btn-success mx-3">Create New Outfit</div>
    <% end %>

    <%= link_to root_path do %>
      <div class="btn btn-primary mx-3">Back</div>
    <% end %>
  </div>

  <div>
    <h1>Doggo outfits 🐶</h1>
  </div>

  <ul class="list-inline tabs-underlined">
    <li>
      <a href="#" class="tab-underlined active">All outfits</a>
    </li>
    <li>
      <a href="#" class="tab-underlined">My outfits</a>
    </li>
  </ul>

  <div>
    <h2>Your outfits</h2>
    <%= render "your_outfits" %>
  </div>

  <div>
    <h2>All outfits</h2>
    <%= render "all_outfits" %>
  </div>

</div>
