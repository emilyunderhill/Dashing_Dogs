<div class="container">
  <div class="d-flex">
    <%= link_to new_outfit_path do %>
      <div class="btn btn-success mx-3">Create New Outfit</div>
    <% end %>

    <%= link_to root_path do %>
      <div class="btn btn-primary mx-3">Back</div>
    <% end %>
  </div>

  <div>
    <h1>Doggie outfits 🐶</h1>
  </div>

  <div>
    <h2>Your outfits</h2>
    <div class="d-flex flex-wrap m-3 p-3">
      <%= render "your_outfits" %>
    </div>
  </div>

  <div>
    <h2>All outfits</h2>
    <div class="d-flex flex-wrap m-3 p-3">
      <%= render "all_outfits" %>
    </div>
  </div>

</div>
