
<div class="cards">
  <% @outfits.each do |outfit| %>
    <%# if outfit.user == current_user %>
      <div class="card-trip">
        <% outfit.photos.each do |photo|%>
          <div>
            <%= cl_image_tag photo.key, class: "image" %>
          </div>
        <%end%>
        <div class="card-trip-infos">
          <div>
            <h2><%= outfit.name.capitalize %></h2>
            <p><%= outfit.size.capitalize %></p>
          </div>
          <h2 class="card-trip-pricing">Â£<%= outfit.price %> / day</h2>
        </div>
        <div class="card-trip-infos">
          <%= link_to "View", outfit_path(outfit), class: "btn btn-primary" %>
          <%= link_to "Bookings", outfit_bookings_path(outfit), class: "btn btn-success" %>
        </div>
      </div>
    <%# end %>
  <% end %>
</div>





