<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url('<%= cl_image_path @outfit.photos[0].key, crop: :fill %>')">
  <div class="container">
    <h1><%= @outfit.name %></h1>
  </div>
</div>


<div class="container mb-5">
  <div>
    <div class="d-flex justify-content-end mt-3">
      <%= link_to 'Back', outfits_path, class: 'btn mr-3' %>
      <%= link_to 'Delete', outfit_path(@outfit), method: :delete, data: { confirm: 'Do you really want to delete?' }, class: 'btn mr-3' %>
      <%= link_to 'Edit', edit_outfit_path(@outfit), class: 'btn mr-3' %>
      <% if current_user != @outfit.user %>
        <%= link_to 'Book', new_outfit_booking_path(@outfit), class: 'btn mr-3' %>
      <% else %>
        <%= link_to 'Bookings', outfit_bookings_path(@outfit), class: 'btn mr-3' %>
      <% end %>
    </div>
  </div>

  <div class="row">

    <div class="col-12 col-lg-8 mt-3 d-flex">
      <div class="col-6">
        <%= render "carousel" %>
      </div>
      <div class="col-6 d-flex" style="flex-direction: column">
          <%= render "accordian", outfit: @outfit %>
      </div>
      <div class="col-6 border rounded bg-white p-3">
        <% if current_user == @outfit.user %>
          <%= render "outfit_bookings" %>
        <% else %>
          <%= render "booking_modal" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
