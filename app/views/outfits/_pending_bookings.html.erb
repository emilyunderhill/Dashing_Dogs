<% @bookings.each do |booking| %>
  <div>
    <% if booking.approve == false %>
      <ul>
        <li class="flash-booking flash-warning mt-3 px-3">
          <p><strong><%= booking.user.first_name %> <%= booking.user.last_name %></strong></p>
          <p><strong>Start:</strong> <%= booking.date_from.strftime("%B #{booking.date_from.day.ordinalize}, %Y") %></p>
          <p><strong>End:</strong> <%= booking.date_to.strftime("%B #{booking.date_to.day.ordinalize}, %Y") %></p>
          <div class="d-flex">
            <%= link_to booking_path(booking), method: :delete, remote: :true, data: { confirm: "Are you sure?" }, class: "mr-auto p-2" do %>
              <i class="far fa-thumbs-down"></i>
            <% end %>
            <%= link_to outfit_booking_approve_path(booking), method: :patch, class: "ml-auto p-2" do %>
              <i class="far fa-thumbs-up"></i>
            <% end %>
          </div>
        </li>
      </ul>
    <% end %>
  </div>
<% end %>
