<% @outfits.each do |outfit| %>
  <% if user_signed_in? %>
    <% next if current_user == outfit.user %>
    <div style="width: 200px; margin: 5px;">
      <% outfit.photos.each do |photo|%>
        <div>
          <%= cl_image_tag photo.key, crop: :fill, width: 200, height: 200 %>
        </div>
      <%end%>
      <div class="d-flex">
        <%= outfit.name.capitalize %>
        <%= outfit.size.capitalize %>
        £<%= outfit.price %> / day
      </div>
      <div class="d-flex">
        <%= link_to "View", outfit_path(outfit), class: "btn btn-primary mx-1" %>
        <%= link_to "Book!", new_outfit_booking_path(outfit), class: "btn btn-success mx-1" %>
      </div>
    </div>
  <% else %>
    <div style="width: 200px; margin: 5px;">
        <% outfit.photos.each do |photo|%>
          <div>
            <%= cl_image_tag photo.key, crop: :fill, width: 200, height: 200 %>
          </div>
        <%end%>
        <div class="d-flex">
          <%= outfit.name.capitalize %>
          <%= outfit.size.capitalize %>
          £<%= outfit.price %> / day
        </div>
        <div class="d-flex">
          <%= link_to "View", outfit_path(outfit), class: "btn btn-primary mx-1" %>
          <%= link_to "Book!", new_outfit_booking_path(outfit), class: "btn btn-success mx-1" %>
        </div>
      </div>
  <% end %>

<% end %>
