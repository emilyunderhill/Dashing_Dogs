<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @outfit.photos.each_with_index do |photo , index| %>
      <% if index == 0 %>
        <div class="carousel-item active">
          <img class="d-block w-100" src="<%= cl_image_path photo.key, crop: :fill, width: 200, height: 200 %>" alt="First slide">
        </div>
      <% else %>
        <div class="carousel-item">
          <img class="d-block w-100" src="<%= cl_image_path photo.key, crop: :fill, width: 200, height: 200 %>" alt="slide">
        </div>
      <% end %>
    <% end %>
    <div>
     <%= link_to outfit_path, method: :delete, data: { confirm: 'Do you really want to delete?' }, class: 'btn mr-3' do%>
        <i class="fas fa-trash"></i>
        <%end%>
    </div>
  </div>
 <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </button>
</div>
